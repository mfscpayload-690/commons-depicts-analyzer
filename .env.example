# Commons Depicts Analyzer - OAuth Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# OAuth 2.0 Credentials
# Get these from: https://meta.wikimedia.org/wiki/Special:OAuthConsumerRegistration
OAUTH_CLIENT_ID=your_client_id_here
OAUTH_CLIENT_SECRET=your_client_secret_here
OAUTH_CALLBACK_URL=http://localhost:5000/auth/callback

# Flask Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
# This is auto-generated in development, but set it for consistency
FLASK_SECRET_KEY=your_generated_secret_key_here

# Optional: Environment
# ENVIRONMENT=development

# Optional: Session Settings
# SESSION_LIFETIME_MINUTES=60

# Optional: Server Settings
# HOST=127.0.0.1
# PORT=5000
# DEBUG=true
